const express = require("express");
const router = express.Router();
const pool = require("../db");

// GET all stores (JSON)
router.get("/", async (req, res) => {
  try {
    const result = await pool.query("SELECT id, name, area FROM stores ORDER BY name");
    res.json(result.rows);   // ⬅️ kirim JSON
  } catch (err) {
    console.error("Error fetching stores:", err.message);
    res.status(500).json({ error: "Database error" });
  }
});

// POST create store (opsional)
router.post("/", async (req, res) => {
  try {
    const { name, area } = req.body;
    const result = await pool.query(
      "INSERT INTO stores (name, area, created_at) VALUES ($1, $2, NOW()) RETURNING *",
      [name, area]
    );
    res.json(result.rows[0]);
  } catch (err) {
    console.error("Error creating store:", err.message);
    res.status(500).json({ error: "Database error" });
  }
});

module.exports = router;
