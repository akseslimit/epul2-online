<div class="d-flex justify-content-between align-items-center mb-3">
  <h2><i class="fa fa-warehouse"></i> <%= title %></h2>
  <a href="/stock/add" class="btn btn-primary">
    <i class="fa fa-plus"></i> Tambah Stok
  </a>
</div>

<table class="table table-striped table-hover shadow-sm">
  <thead class="table-dark">
    <tr>
      <th>Produk</th>
      <th>Toko</th>
      <th>Jumlah</th>
      <th>Tanggal</th>
    </tr>
  </thead>
  <tbody>
    <% if (!data || data.length === 0) { %>
      <tr>
        <td colspan="4" class="text-center text-muted">Belum ada data stok</td>
      </tr>
    <% } else { %>
      <% data.forEach(stock => { %>
        <tr>
          <td><%= stock.product %></td>
          <td><%= stock.store %></td>
          <td><%= stock.quantity %></td>
          <td><%= stock.updated_at ? new Date(stock.updated_at).toLocaleString() : '-' %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
