<div class="d-flex justify-content-between align-items-center mb-3">
  <h2 class="fw-bold"><i class="fa fa-truck"></i> Distribution</h2>
  <a href="/distribution/add" class="btn btn-primary">
    <i class="fa fa-plus"></i> Tambah Distribusi
  </a>
</div>

<div class="card shadow-sm">
  <div class="card-body">
    <table class="table table-hover table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Produk</th>
          <th>Dari Toko</th>
          <th>Ke Toko</th>
          <th>Qty</th>
          <th>Status</th>
          <th>Tanggal</th>
        </tr>
      </thead>
      <tbody>
        <% if (distribution.length > 0) { %>
          <% distribution.forEach(d => { %>
            <tr>
              <td><%= d.id %></td>
              <td><%= d.product %></td>
              <td><%= d.from_store %></td>
              <td><%= d.to_store %></td>
              <td><%= d.quantity %></td>
              <td>
                <span class="badge <%= d.status === 'completed' ? 'bg-success' : 'bg-warning text-dark' %>">
                  <%= d.status %>
                </span>
              </td>
              <td><%= new Date(d.distribution_date).toLocaleString("id-ID") %></td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="7" class="text-center text-muted">Belum ada distribusi</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</div>
