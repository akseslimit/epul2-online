<h2 class="mb-3">Daftar Produk</h2>
<a href="/products/add" class="btn btn-primary mb-3">
  <i class="fa fa-plus"></i> Tambah Produk
</a>

<table class="table table-bordered table-striped table-hover">
  <thead class="table-dark">
    <tr>
      <th>Nama Produk</th>
      <th>SKU</th>
      <th>Harga</th>
      <th>Dibuat</th>
    </tr>
  </thead>
  <tbody>
    <% if (products && products.length > 0) { %>
      <% products.forEach(p => { %>
        <tr>
          <td><%= p.name %></td>
          <td><%= p.sku %></td>
          <td>Rp <%= p.price.toLocaleString("id-ID") %></td>
          <td><%= new Date(p.created_at).toLocaleString("id-ID") %></td>
        </tr>
      <% }) %>
    <% } else { %>
      <tr>
        <td colspan="4" class="text-center text-muted">Belum ada produk</td>
      </tr>
    <% } %>
  </tbody>
</table>
